{
    "manifest_version": 2,

	"name": "LWB Plugin",
	"description": "This extension allows users to learn a language while browsing the web.",
	"version": "1.0",

	"background": {
        "scripts": ["background.js"]
	},

	"browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },

  	"permissions": [
        "activeTab",
        "alarms",
        "notifications",
        "storage"
    ]
}
